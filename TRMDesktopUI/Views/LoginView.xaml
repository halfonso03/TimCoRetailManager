<UserControl x:Class="TRMDesktopUI.Views.LoginView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TRMDesktopUI.Views"
             mc:Ignorable="d" 
             Background="White"
             d:DesignHeight="425" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="auto"></ColumnDefinition>
            <ColumnDefinition Width="auto"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>       
        
        <!--error message row-->

        <TextBlock x:Name="ErrorMessage"
                   Foreground="red"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Margin="0 0 0 20"                   
                   MaxWidth="300"
                   TextWrapping="Wrap"
                   Grid.Row="1"
                   Grid.Column="1"
                   Grid.ColumnSpan="2"
                   Visibility="{Binding IsErrorVisible, Converter={StaticResource BooleanToVisibilityConverter}, FallbackValue=Collapsed}"
                   ></TextBlock>
        
        <TextBlock Grid.Row="0" 
                   Grid.Column="1" 
                   Grid.ColumnSpan="2" 
                   HorizontalAlignment="Center" 
                   Text="Login Form" 
                   FontSize="48" 
                   Margin="0 0 0 20"
                    />

        <!--username row-->
        <TextBlock Grid.Row="2" 
                   Grid.Column="1"
                   Text="User Name" 
                   Margin="0 0 10 10"/>
        <TextBox x:Name="UserName" 
                 Grid.Row="2" 
                 Grid.Column="2"
                 MinWidth="300"
                 Margin="0 0 0 20"/>
        
        <!--passord row-->
        <TextBlock Grid.Row="3" 
                   Grid.Column="1"
                   Text="Password" 
                   Margin="0 0 0 10"/>
        <PasswordBox x:Name="Password" 
                 Grid.Row="3" 
                 Grid.Column="2"
                 Margin="0 0 0 20"/>
        
        <!--login row-->
        <Button Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="2" Content="Login" x:Name="Login" 
                Padding="20 5" HorizontalAlignment="Center" IsDefault="True"></Button>
    </Grid> 
</UserControl>
